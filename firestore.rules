rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Projects collection - users can only access their own projects
    match /projects/{projectId} {
      // Allow read and write if authenticated and the userId matches
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
      
      // Allow create if authenticated and the userId in the document matches the authenticated user
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.userId;
    }
  }
}